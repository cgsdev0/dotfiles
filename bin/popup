#!/bin/bash

LOCK=/tmp/tmux-popups-lock
# glitchcat ~/.current_cow --duration infinite --glitchness 30 --amount 30


function decolor() {
  if [[ "$1" == "force" ]]; then
    sed 's/\x1B\[[0-9;]\{1,\}[A-Za-z]//g'
  elif [[ "$EFFECT" == *"termsand"* ]]; then
    cat
  elif [[ -n "$EFFECT" ]]; then
    sed 's/\x1B\[[0-9;]\{1,\}[A-Za-z]//g'
  else
    cat
  fi
}

# poor man's getopts
if [[ "$1" == "-c" ]]; then
  shift
  CLIENT="$1"
  shift
fi

if [[ "$1" == "-e" ]]; then
  shift
  EFFECT="$1"
  shift
  case "$EFFECT" in
    lolsand)
      export EFFECT="| lolcat --force | termsand"
      ;;
    sand)
      export EFFECT="| termsand -c 2153144201 -b"
      ;;
    glitch)
      export EFFECT="| glitchcat --duration infinite --glitchness 30 --amount 30"
      ;;
    *)
      export EFFECT="| python3 -m terminaltexteffects --ignore-terminal-dimensions $EFFECT | head -c -1"
      ;;
  esac
fi
if [[ ! -p /dev/stdin ]]; then
  for CLIENT in $(tmux -L outer list-clients -F '#{client_name}'); do
    flock ${LOCK}${CLIENT//\//.} /bin/sh -c "tmux -L outer display-popup -c $CLIENT $*" &
  done
  wait
else
  TMP="$(mktemp)"
  trap "rm $TMP" EXIT
  HEIGHT=1
  WIDTH=10
  decolor > "$TMP"
  # while IFS= read -r line; do
  #   if [[ ${#line} -gt $WIDTH ]]; then
  #     WIDTH=${#line}
  #   fi
  #   ((HEIGHT++))
  # done < <(decolor force < "$TMP")
  # ((HEIGHT+=2))
  # ((WIDTH+=2))

  # MAX=$(tmux -L outer display -c $CLIENT -p '#{window_width}x#{window_height}')
  # MAX_H=${MAX#*x}
  # ((MAX_H+=1))
  # MAX_W=${MAX%x*}
  # if [[ $HEIGHT -gt $MAX_H ]]; then
  #   HEIGHT=$MAX_H
  # fi
  # if [[ $WIDTH -gt $MAX_W ]]; then
  #   WIDTH=$MAX_W
  # fi
  # EFFECT="${EFFECT:-; tput civis}"
  flock $LOCK${CLIENT//\//.} /bin/sh -c "cd $PWD; tmux -L outer display-popup -c $CLIENT  $* 'tput cvvis; cd $PWD; cat \"$TMP\" $EFFECT'"
fi
