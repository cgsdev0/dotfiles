[[ -f ~/.twitch_client_id ]]     && export TWITCH_CLIENT_ID="$(cat ~/.twitch_client_id)"
[[ -f ~/.twitch_client_secret ]] && export TWITCH_CLIENT_SECRET="$(cat ~/.twitch_client_secret)"
[[ -f ~/.twitch_refresh ]]       && export TWITCH_REFRESH_TOKEN="$(cat ~/.twitch_refresh)"
[[ -f ~/.twitch_access_token ]]  && export TWITCH_ACCESS_TOKEN="$(cat ~/.twitch_access_token)"
export TWITCH_NICK=badcop_
