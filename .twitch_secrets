export TWITCH_NICK=$1
secret() {
  echo ~/.secrets/twitch/"$TWITCH_NICK"/"$1"
}
[[ -f ~/.secrets/twitch/client_id ]] && export TWITCH_CLIENT_ID="$(cat ~/.secrets/twitch/client_id)"
[[ -f ~/.secrets/twitch/client_secret ]] && export TWITCH_CLIENT_SECRET="$(cat ~/.secrets/twitch/client_secret)"
[[ -f $(secret access) ]]  && export TWITCH_ACCESS_TOKEN="$(cat $(secret access))"
[[ -f $(secret refresh) ]]  && export TWITCH_REFRESH_TOKEN="$(cat $(secret refresh))"
