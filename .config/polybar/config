[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

; other colors
black = #000000
red = #E06C75
green = #98C379
orange = #D19A66
blue = #61AEEE
magenta = #C678DD
cyan = #56B6C2
lightgray = #ABB2BF
darkgray = #5C6370
white = #FFFFFF

[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 36
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 7
padding-right = 7

module-margin-left = 3
module-margin-right = 3

font-0 = fixed:pixelsize=12;2
font-1 = FontAwesome:pixelsize=16;2
font-2 = Hack Nerd Font Mono:pixelsize=20;4
#font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = siji:pixelsize=10;1

modules-left = cpu memory filesystem custombattery customvpn
;weathericon weathertext
modules-center = i3
modules-right = alsa wlan eth date time

tray-position = none
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/weathertext]
type = custom/script

exec = sed -n '2p' < ~/.cache/weather_info
format = <label>
format-offset = -14
label = %output%
label-font = 1
interval = 30
click-left = weather

[module/kdeconnect]
type = custom/script
exec = ". ~/.config/polybar/kdeconnect/polybar-kdeconnect.sh; show_devices"
tail = true

[module/openweathermap]
type = custom/script
exec = ~/.config/polybar/weather/openweathermap-detailed.sh
interval = 600
label-font = 3

[module/gmail]
type = custom/script
exec = python3 ~/.config/polybar/gmail/launch.py -ns
tail = true
click-left = xdg-open https://mail.google.com

[module/weathericon]
type = custom/script

exec = sed -n '1p' < ~/.cache/weather_info
format = <label>
label = %output%
label-font = 4

click-left = weather
; Seconds to sleep between updates
; Default: 2 (0 if `tail = true`)
interval = 30

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

